@model SalesManagementApplication.Models.Sale

@{
    ViewData["Title"] = "Create a sale";
}

<h1 class="my-4 text-center">Add a new sale!</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input asp-for="CreatedDate" class="form-control"
                           max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.AddYears(-22).ToString("yyyy-MM-ddThh:mm")" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SellerId" class="control-label"></label>
                    <select asp-for="SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>
                </div>
                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <a asp-action="Index" class="link-dark text-center">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
