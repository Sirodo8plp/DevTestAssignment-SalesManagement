@model SalesManagementApplication.Models.Sale

@{
    ViewData["Title"] = "Details";
}

<h1 class="my-4 text-center">Details about sale with ID: @Model.SaleId</h1>

<hr />
<dl class="row mx-auto mb-3" style="max-width: max-content;">
    <dt class="col-6 text-center">
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    <dd class="col-6 text-center">
        @Html.DisplayFor(model => model.Price)
    </dd>
    <dt class="col-6 text-center">
        @Html.DisplayNameFor(model => model.CreatedDate)
    </dt>
    <dd class="col-6 text-center">
        @Html.DisplayFor(model => model.CreatedDate)
    </dd>
    <dt class="col-6 text-center">
        @Html.DisplayNameFor(model => model.Seller)
    </dt>
    <dd class="col-6 text-center">
        @Html.DisplayFor(model => model.Seller.LastName)
    </dd>
</dl>

<div class="mt-3 d-flex flex-column align-items-center">
    <a asp-action="Edit" asp-route-id="@Model?.SaleId" class="link-primary mb-3">Edit</a>
    <a asp-action="Index" class="link-dark mt-3">Back to List</a>
</div>
